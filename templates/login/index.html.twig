{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
    <div class="container my-5">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <h1>Connexion</h1>

        <form class="form-controll" action="{{ path('app_login') }}" method="post">
            <label for="username">Votre email</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required>

            <label for="password">Votre mot de passe :</label>
            <input type="password" id="password" name="_password" required>

            {# If you want to control the URL the user is redirected to on success #}
            <input type="hidden" name="_target_path" value={{ path('app_account') }}>
            <button type="submit" class="btn btn-success">Se connecter</button>
        </form>
    </div>
{% endblock %}